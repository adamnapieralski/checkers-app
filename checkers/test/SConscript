import os, platform

Import('env')
env_test = env.Copy()
if(platform.system() == "Linux"):
   env_test.Replace( LIBS = [ 'boost_unit_test_framework' ] )
else:
   print platform.system() + " not supported"
   
# build C++ test program
test_build = env_test.Program(target = 'test', source = ['Test.cpp', '../src/Player.cpp', '../src/Board.cpp', '../src/Piece.cpp', '../src/Pawn.cpp', '../src/King.cpp', '../src/Move.cpp'])
